<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yinhetianze.business.shop.mapper.busi.ShopBusiMapper">


    <update id="addShopVisitCount" parameterType="java.lang.Integer">
        update busi_shop
        set visitor_count=visitor_count+1
        where id = #{id}
    </update>
</mapper>